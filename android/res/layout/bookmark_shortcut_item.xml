<?xml version="1.0" encoding="utf-8"?>
<!--
   Book item layout for CR3 file browser
-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shortcut_bookmark_item_body"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:layout_marginTop="3dip"
    android:layout_marginBottom="3dip"
    android:layout_marginLeft="2dip"
    android:layout_marginRight="2dip"
    >

    <TextView android:id="@+id/shortcut_bookmark_item_shortcut"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:singleLine="true"
        android:layout_gravity="left" />

    <LinearLayout android:id="@+id/shortcut_bookmark_item_text"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|fill_horizontal"
        android:baselineAligned="false">


        <TextView android:id="@+id/shortcut_bookmark_item_percent"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left" />
        <TextView android:id="@+id/shortcut_bookmark_item_title"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left" />
        <TextView android:id="@+id/shortcut_bookmark_item_pos_text"
            style="@android:style/TextAppearance.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_gravity="left" />
    </LinearLayout>
</LinearLayout>
