<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_dialog" 
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:minWidth="1200dip"
    android:layout_height="fill_parent">
    <RelativeLayout
        android:id="@+id/base_dlg_button_panel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dip"
        android:layout_marginBottom="2dip"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip"
        android:background="#40808080"
        >
        <ImageButton android:id="@+id/base_dlg_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/cr3_button_prev"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            />
	    <TextView android:id="@+id/base_dlg_title"
	        style="@style/TextAppearance.Medium"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="4dip"
	        android:layout_marginBottom="4dip"
            android:layout_marginRight="4dip"
            android:layout_marginLeft="4dip"
	        android:singleLine="false"
	        android:text="Test"
	        android:layout_toRightOf="@id/base_dlg_btn_back"
	        android:layout_centerVertical="true"
	        />
        <ImageButton android:id="@+id/base_dlg_btn_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/cr3_button_ok"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            />
        <ImageButton android:id="@+id/base_dlg_btn_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/base_dlg_btn_positive"
            android:src="@drawable/cr3_button_cancel"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            />
    </RelativeLayout>
    <FrameLayout android:id="@+id/base_dialog_content_view"
        android:gravity="top"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="100"
        android:layout_marginLeft="0dip"
        android:layout_marginRight="0dip">
    </FrameLayout>
</LinearLayout>
