<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:id="@+id/LinearLayout01" android:layout_height="fill_parent" android:layout_width="fill_parent">
	<LinearLayout android:layout_width="match_parent" android:id="@+id/LinearLayout02" android:layout_height="wrap_content">
		<ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" 
	        android:layout_margin="4dip"
			android:id="@+id/logo" android:drawable="@drawable/cr3_logo">
		</ImageView>
		<TextView android:text="Cool Reader 3.0" android:id="@+id/version" android:layout_width="fill_parent" 
	        android:layout_margin="4dip"
			android:layout_height="wrap_content">
		</TextView>
	</LinearLayout>
	<TextView android:text="Vadim Lopatin, 2011" android:id="@+id/copyright" android:layout_margin="4dip" android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
	<TextView android:text="buggins@fromru.com" android:id="@+id/email" android:layout_margin="4dip" android:layout_width="fill_parent" android:layout_height="wrap_content"></TextView>
</LinearLayout>
